{
    "name": "reachweb/statamic-livewire-filters",
    "description": "Livewire filters for Statamic collections.",
    "keywords": [
        "Statamic",
        "Livewire"
    ],
    "homepage": "https://www.reach.gr",
    "license": "proprietary",
    "type": "statamic-addon",
    "authors": [
        {
            "name": "Iosif Chatzimichail",
            "email": "iosif@reach.gr",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "info@reach.gr"
    },
    "autoload": {
        "psr-4": {
            "Reach\\StatamicLivewireFilters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reach\\StatamicLivewireFilters\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Livewire Filters",
            "description": "Livewire powered live filtering for Statamic collections"
        },
        "laravel": {
            "providers": [
                "Reach\\StatamicLivewireFilters\\ServiceProvider"
            ]
        }
    },
    "require": {
        "livewire/livewire": "^3.3",
        "laravel/framework": "^10.0",
        "illuminate/support": "^10.0",
        "statamic/cms": "4.*",
        "jonassiewertsen/statamic-livewire": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "orchestra/testbench": "^8.19",
        "phpunit/phpunit": "^10.5",
        "laravel/pint": "^1.13"
    }
}
