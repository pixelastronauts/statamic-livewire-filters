{
    "name": "reachweb/statamic-livewire-filters",
    "autoload": {
        "psr-4": {
            "Reachweb\\StatamicLivewireFilters\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Livewire Filters",
            "description": "Livewire powered live filtering for Statamic collections"
        },
        "laravel": {
            "providers": [
                "Reachweb\\StatamicLivewireFilters\\ServiceProvider"
            ]
        }
    },
    "require": {
        "livewire/livewire": "^3.3",
        "laravel/framework": "^10.0",
        "illuminate/support": "^10.0",
        "statamic/cms": "4.*",
        "jonassiewertsen/statamic-livewire": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "orchestra/testbench": "^8.19",
        "pestphp/pest": "^2.30",
        "pestphp/pest-plugin-laravel": "^2.2",
        "pestphp/pest-plugin-livewire": "^2.1"
    }
}
